<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
              android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Current PIN"
        android:fontFamily="sans-serif-light"
        android:inputType="numberPassword"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/pad_10dp"
        android:paddingBottom="@dimen/pad_10dp"
        android:layout_marginTop="@dimen/pad_30dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:maxLength="4"
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/edit_text_border"
        android:textSize="28sp"
        android:id="@+id/current_pin_edittext"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New PIN"
        android:maxLength="4"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:inputType="numberPassword"
        android:paddingTop="@dimen/pad_10dp"
        android:paddingBottom="@dimen/pad_10dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/edit_text_border"
        android:textSize="28sp"
        android:id="@+id/new_pin_edittxt"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm New PIN"
        android:fontFamily="sans-serif-light"
        android:inputType="numberPassword"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:maxLength="4"
        android:paddingTop="@dimen/pad_10dp"
        android:paddingBottom="@dimen/pad_10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/edit_text_border"
        android:textSize="28sp"
        android:id="@+id/confirm_pin_edit_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/confirm_pin_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_55dp"
        android:text="Confirm"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/edit_text_border"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/pad_55dp"
        android:layout_marginRight="@dimen/pad_90dp"
        android:layout_marginEnd="@dimen/pad_90dp"
        android:layout_marginStart="@dimen/pad_90dp"
        android:layout_marginLeft="@dimen/pad_90dp"/>

</LinearLayout>