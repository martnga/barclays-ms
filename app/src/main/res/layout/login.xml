<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorPrimaryDark"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/barclays"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:background="@drawable/chat_bubble_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/pad_5dp"
        android:layout_marginEnd="@dimen/pad_15dp"
        android:layout_marginTop="@dimen/pad_40dp"
        android:hint="Account Number"
        android:ems="10"
        android:id="@+id/account_number_editText"/>

    <EditText
        android:background="@drawable/chat_bubble_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/pad_5dp"
        android:layout_marginEnd="@dimen/pad_15dp"
        android:layout_marginTop="@dimen/pad_10dp"
        android:hint="PIN"
        android:ems="10"
        android:id="@+id/pin_editText"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_55dp"
        android:text="Login"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_bg"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/pad_55dp"
        android:layout_marginRight="@dimen/pad_90dp"
        android:layout_marginEnd="@dimen/pad_90dp"
        android:layout_marginStart="@dimen/pad_90dp"
        android:layout_marginLeft="@dimen/pad_90dp"/>


</LinearLayout>